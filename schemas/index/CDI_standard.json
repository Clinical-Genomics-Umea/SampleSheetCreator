

{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "UID": {
      "type": "string"
    },
    "IndexKitName": {
      "type": "string"
    },
    "DisplayName": {
      "type": "string"
    },
    "Version": {
      "type": "string"
    },
    "Description": {
      "type": "string"
    },
    "Adapters": {
      "type": "object",
      "properties": {
        "AdapterRead1": {
          "type": "string"
        },
        "AdapterRead2": {
          "type": "string"
        }
      },
      "required": [
        "AdapterRead1",
        "AdapterRead2"
      ]
    },
    "Layout": {
      "type": "string",
      "const": "Standard"
    },
    "OverrideCyclesPattern": {
      "type": "string"
    },
    "IndexStrategy": {
      "type": "string",
      "const": "CDI"
    },
    "IndexI7Len": {
      "type": "integer"
    },
    "IndexI5Len": {
      "type": "integer"
    },
    "IndexSets": {
      "type": "object",
      "properties": {
        "IndexI7": {
          "type": "array",
          "items":
            {
              "type": "object",
              "properties": {
                "IndexI7Name": {
                  "type": "string"
                },
                "IndexI7": {
                  "type": "string"
                }
              },
              "required": [
                "IndexI7Name",
                "IndexI7"
                ]
            },
            "additionalProperties": false
        },
        "IndexI5": {
          "type": "array",
          "items":
            {
              "type": "object",
              "properties": {
                "IndexI5Name": {
                  "type": "string"
                },
                "IndexI5": {
                  "type": "string"
                }
              },
              "required": [
                "IndexI5Name",
                "IndexI5"
              ]
            },
            "additionalProperties": false
        }
      },
      "required": [
        "IndexI7",
        "IndexI5"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "IndexKitName",
    "DisplayName",
    "Version",
    "Description",
    "Adapters",
    "Layout",
    "OverrideCyclesPattern",
    "IndexStrategy",
    "IndexI7Len",
    "IndexI5Len",
    "IndexSets"
  ]
}

